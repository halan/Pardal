<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://pardal/skin/app.css" type="text/css"?>

<window
  id="main"
  title="Pardal"
  width="300" 
  height="300"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:html="http://www.w3.org/1999/xhtml">

  <vbox flex="1" id="main-container">
    <tabbox flex="1">
      <hbox>
        <menubar id="sample-menubar">
          <menu id="file-menu" label="Menu">
            <menupopup id="file-popup">
              <menuitem label="Still planning what put here..."/>
              <menuseparator/>
              <menuitem label="Exit"/>
            </menupopup>
          </menu>
        </menubar>

      <tabs flex="1">
        <tab image="chrome://pardal/skin/applications-microblogging-panel.png" label="Timeline"/>
        <tab image="chrome://pardal/skin/applications-chat-panel.png" label="@mentions" />
        <tab image="chrome://pardal/skin/applications-email-panel.png" label="DMs"/>
      </tabs>
  </hbox>
      <tabpanels flex="1">
        <tabpanel id="timeline">
          <browser type="content" src="timeline.html" flex="1"/>
        </tabpanel>
        <tabpanel id="mentions">
          <vbox flex="1">
            <html:div>tweet</html:div>
          </vbox>
        </tabpanel>
        <tabpanel id="timeline">
          <vbox flex="1">
            <html:div>tweet</html:div>
          </vbox>
        </tabpanel>
      </tabpanels>
    </tabbox>
    <stack id="text-enter">
      <hbox><spacer flex="1" /> <vbox><spacer flex="1" /><label class="word-counter">140</label></vbox> </hbox>
      <textbox multiline="true" rows="3" />
    </stack>
  </vbox>
</window>
